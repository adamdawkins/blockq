<% content_tag :li, :class => "article quote", :id => "quote_#{quote.id}" do %>
	<% content_tag :blockquote, :class => "text", :cite => 	"#{quote.source}" do %> 
		&#8220;<%= quote.text %>&#8221;
		<% end %>
		<%= link_to "See quote", quote %>
		<%= content_tag :cite, quote.author %>
		quoted by <%= link_to quote.user.username, short_user_path(quote.user.username) %> <%= time_ago_in_words(quote.created_at) %> ago.
	<% if quote.tags.present? %>
		<ul class="tags">
			<%= render quote.tags %>
		</ul>
	<% end %>
<% end %>